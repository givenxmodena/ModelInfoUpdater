<Window x:Class="ModelInfoUpdater.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Info Updater"
        Height="380"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Style for Labels -->
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>

        <!-- Style for TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Style for Buttons -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Edit Project Information"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#1A1A1A"
                   Margin="0,0,0,16"/>

        <!-- Form Fields with Data Binding -->
        <StackPanel Grid.Row="1">
            <!-- Project Name -->
            <Label Content="Project Name"/>
            <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter the project name"/>

            <!-- Project Number -->
            <Label Content="Project Number"/>
            <TextBox Text="{Binding ProjectNumber, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter the project number"/>

            <!-- Client Name -->
            <Label Content="Client Name"/>
            <TextBox Text="{Binding ClientName, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter the client name"/>

            <!-- Project Status -->
            <Label Content="Project Status"/>
            <TextBox Text="{Binding ProjectStatus, UpdateSourceTrigger=PropertyChanged}"
                     ToolTip="Enter the project status (e.g., In Progress, Complete, On Hold)"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,0,0,8"
                   FontSize="11">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="#28A745"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsStatusError}" Value="True">
                            <Setter Property="Foreground" Value="#DC3545"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>

        <!-- Buttons with Command Binding -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,8,0,0">

            <!-- Load Current Button -->
            <Button Content="Load Current"
                    Command="{Binding LoadCurrentCommand}"
                    Background="#6C757D"
                    Margin="0,0,8,0"
                    ToolTip="Load current values from the active document"/>

            <!-- Save Button -->
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Background="#28A745"
                    Margin="0,0,8,0"
                    ToolTip="Save changes to the project information"/>

            <!-- Close Button -->
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Background="#DC3545"
                    ToolTip="Close without saving"/>
        </StackPanel>
    </Grid>
</Window>

