<Window x:Class="ModelInfoUpdater.Updater.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Info Updater"
        Height="220"
        Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <!-- Reuse the primary button styling from the main add-in window -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="MinWidth" Value="90" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#0078D4" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Updating Model Info Updater"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#1A1A1A"
                   Margin="0,0,0,8" />

        <!-- Status text -->
        <TextBlock Grid.Row="1"
                   Text="{Binding StatusMessage}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,8"
                   FontSize="12" />

        <!-- Progress -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <ProgressBar Width="300"
                         Height="16"
                         Minimum="0"
                         Maximum="100"
                         Value="{Binding Progress}"
                         IsIndeterminate="{Binding IsIndeterminate}" />
            <TextBlock Margin="8,0,0,0"
                       VerticalAlignment="Center"
                       FontSize="12"
                       Text="{Binding ProgressText}" />
        </StackPanel>

        <!-- Actions -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Restart Revit"
                    Command="{Binding RestartRevitCommand}"
                    Visibility="{Binding IsRestartRevitVisible, Converter={StaticResource BoolToVisibility}}" />
            <Button Content="Close"
                    Margin="8,0,0,0"
                    Command="{Binding CloseCommand}"
                    IsEnabled="{Binding IsCloseEnabled}" />
        </StackPanel>
    </Grid>
</Window>

